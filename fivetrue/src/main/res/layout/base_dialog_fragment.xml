<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:v="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    v:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_base_dialog_fragment_title"
            android:layout_width="match_parent"
            android:background="?attr/colorPrimary"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:textColor="?attr/colorAccent"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/layout_base_dialog_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/tv_base_dialog_fragment_title"/>
        

        <LinearLayout
            android:id="@+id/layout_base_dialog_fragment_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_base_dialog_fragment"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_base_dialog_fragemnt_cancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@android:string/cancel"
                android:textColor="?attr/colorPrimaryDark"
                android:background="?attr/colorAccent"/>

            <Button
                android:id="@+id/btn_base_dialog_fragemnt_ok"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="@android:string/ok"
                android:textColor="?attr/colorAccent"
                android:background="@drawable/selector_common_button"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/layout_base_dialog_fragment_button"
            android:background="?attr/colorPrimary"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>